{
  "version": 2,
  "buildCommand": "cd public && npm install && npm run build",
  "outputDirectory": "public/dist",
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.9",
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/public/dist/$1" }
  ]
}
