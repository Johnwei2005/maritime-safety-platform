{
  "version": 2,
  "buildCommand": "cd public && npm install --no-fund --no-audit && npm run build",
  "outputDirectory": "public/dist",
  "installCommand": "pip install --no-cache-dir --user -r api/requirements.txt",
  "functions": {
    "api/**/*.py": {
      "runtime": "@vercel/python@3.1.0",
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/public/dist/$1" }
  ]
}
